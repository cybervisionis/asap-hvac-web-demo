{
  "name": "asap-hvac-backend",
  "version": "0.2.0",
  "description": "Sample API backend for ASAP HVAC web demo",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "npm run build && node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --watch src src/app.ts",
    "lint": "eslint --ext .ts src"
  },
  "keywords": [
    "hvac",
    "api",
    "express",
    "sample"
  ],
  "author": "CyberVision Information Systems",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "helmet": "^7.0.0",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.16.5",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^8.57.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
